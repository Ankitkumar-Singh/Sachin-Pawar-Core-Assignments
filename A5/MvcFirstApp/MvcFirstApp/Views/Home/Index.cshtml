@model IEnumerable<MvcFirstApp.Models.Movie>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    @* Listing all movies *@
    <button type="button" class="btn btn-outline-info">
        @Html.ActionLink("Create New Record", "Create")
    </button>
    <div class="container my-5">
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MovieStar)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MovieType)
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "Create", new { id = item.Id }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-secondary" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>