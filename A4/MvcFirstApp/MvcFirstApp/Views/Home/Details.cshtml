@model MvcFirstApp.Models.Movie

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StudentDetails</title>
</head>
<body>
    @* Showing movie details *@
    <div>
        <h4>Student Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MovieType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MovieType)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MovieStar)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MovieStar)
            </dd>
        </dl>
    </div>
    <div>
        <button type="button" class="btn btn-outline-info">@Html.ActionLink("BACK", "Index")</button>
    </div>
</body>
</html>